pipeline {
    agent any 
    stages {
        stage ("Clean up"){
            steps {
                sh 'rm -rf /root/.jenkins/workspace/test/*'
                sh 'ls'
            }
        }
        stage ("Clone repo"){
            steps {
                sh "git clone https://github.com/salsabylHam/Astonvilla.git"
            }
        }
        stage ("Generate docker image") {
            steps {
                 dir("astonvilla-app"){
                    sh "docker build -t salsabilhamraoui510802/astonvilla-app:1.1.${env.BUILD_NUMBER} ."
                }                
            }
        }
        stage ("push docker image") {
            steps {
                 dir("astonvilla-app"){
                    sh "docker push salsabilhamraoui510802/astonvilla-app:1.1.${env.BUILD_NUMBER}"
                }                
            }
        }
    }
}
